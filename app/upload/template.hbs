<form class="col-md-6 col-sm-6">
	<div class="form-group">
		<label>Title</label>
			{{input type="text" class="form-control" value=title placeholder="Add Product title.."}}
	</div>
	<div class="form-group">
		<label>Stock</label>
			{{input type="text" class="form-control" value=stock placeholder="Add Product stock.."}}
	</div>
	<div class="form-group">
		<label>Description</label>
			{{textarea class="form-control" value=description placeholder="Description.."}}
	</div>
	<div class="form-group">
		<label>image</label>
			{{textarea class="form-control" value=images placeholder="Images.."}}
	</div>
	<button {{action 'addProduct'}} class="btn btn-primary">Submit</button>
</form>
